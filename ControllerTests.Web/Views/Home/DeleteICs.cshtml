@using ControllerTests.Web.Helpers
@model IEnumerable<ControllerTests.Web.Models.IntegratedCircuit>

<h2>Select ICs to Delete</h2>

@{
    // todo: add cookie logic
    var cookieLink = "#";
}
<div class="alert alert-warning">This page requires a dev cookie. Create the cookie by navigating to <a href="@cookieLink">the dev cookie page</a>.</div>

@Html.RenderPageAlert()

@if (!Model.Any())
{
    <p>There are no items to show.</p>
    
    <p>@Html.ActionLink("<< Back to list.", "Index")</p>
    
}
else
{
    using (Html.BeginForm())
    {
        <ul>
            @foreach (var ic in Model)
            {
                <li class="checkbox">
                    <label>
                        <input type="checkbox" name="idsToDelete" value="@ic.Id" />
                        @ic.Code - @ic.Description
                    </label>
                </li>
            }
        </ul>

        <button type="submit" class="btn btn-danger">Delete ICs</button>
        @Html.ActionLink("cancel", "Index")
    }
}
